<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.IROSInfo" parent="Theme.MaterialComponents.Light.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/primaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.IROSInfo" parent="Base.Theme.IROSInfo" />


    <style name="appTextFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/Regular_Body</item>
        <item name="android:textColorHint">@color/cadetBlue</item>
    </style>


    <style name="Widget.Material3.Button.IROSInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_41sdp</item>
        <item name="android:textAppearance">@style/SemiBold_Subtitle</item>
        <item name="cornerRadius">@dimen/_7sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_6sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_6sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_6sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_6sdp</item>
    </style>

    <style name="radiBtnTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>